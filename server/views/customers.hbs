<h1>Customers</h1>

{{! Add Customer button }}
<a href="/customers/new">
    <button>+ Add Customer</button>
</a>

{{! READ table }}
<table>
    <thead>
        <tr>
            {{#each customers.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each customers}}
        <tr>
            <td>{{this.customerID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
            <td>{{this.address1}}</td>
            <td>{{this.address2}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zipCode}}</td>
            
            {{! UPDATE form }}
            <form id='update_customer_form'>
                <input type='hidden' name='update_customer_id' value='{{this.customerID}}' />
                <input type='hidden' name='update_customer_name' value='{{this.firstName}} {{this.lastName}}' />
                <td>
                    <a href="/customers/{{this.customerID}}/edit">
                        <button type="button">Edit</button>
                    </a>
                </td>
            </form>


            {{! DELETE form }}
            <form id='delete_customer_form'>
                <input type='hidden' name='delete_customer_id' value='{{this.customerID}}' />
                <input type='hidden' name='delete_customer_name' value='{{this.firstName}} {{this.lastName}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>

        </tr>
        {{/each}}
    </tbody>
</table>