{{! READ table }}
<table>
    <thead>
        <tr>
            {{#each products.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.productID}}</td>
            <td>{{this.productType}}</td>
            <td>{{this.setID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.cardCondition}}</td>
            <td>{{this.sku}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantity}}</td>

            {{! DELETE form (UI only for Step 3) }}
            <form id='delete_product_form'>
                <input type='hidden' name='delete_product_id' value='{{this.productID}}' />
                <td><button type='submit'>Delete</button></td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form (UI only for Step 3) }}
<h2>Add a Product</h2>
<form class='cuForm' id='create_product_form'>
    <label for='create_product_type'>Product Type:</label>
    <select name='create_product_type' id='create_product_type'>
        <option value='' disabled selected>Select Type</option>
        <option value='CARD'>Card</option>
        <option value='BOX'>Box</option>
    </select>

    <label for='create_product_set_id'>Set:</label>
    <select name='create_product_set_id' id='create_product_set_id'>
        <option value='' disabled selected>Select Set</option>
        {{#each sets}}
        <option value='{{this.setID}}'>{{this.setID}} - {{this.name}}</option>
        {{/each}}
    </select>

    <label for='create_product_name'>Name:</label>
    <input type='text' name='create_product_name' id='create_product_name' />

    <label for='create_product_condition'>Card Condition (cards only):</label>
    <select name='create_product_condition' id='create_product_condition'>
        <option value='' selected>&lt; None &gt;</option>
        <option value='NM'>NM</option>
        <option value='LP'>LP</option>
        <option value='MP'>MP</option>
        <option value='HP'>HP</option>
        <option value='DMG'>DMG</option>
    </select>

    <label for='create_product_sku'>SKU (boxes only):</label>
    <input type='text' name='create_product_sku' id='create_product_sku' />

    <label for='create_product_price'>Price:</label>
    <input type='number' step='0.01' min='0' name='create_product_price' id='create_product_price' />

    <label for='create_product_quantity'>Quantity:</label>
    <input type='number' min='0' name='create_product_quantity' id='create_product_quantity' />

    <input type='submit' value='Submit (not wired yet)' />
</form>

{{! UPDATE form (UI only for Step 3) }}
<h2>Update a Product</h2>
<form class='cuForm' id='update_product_form'>
    <label for='update_product_id'>Product to Update:</label>
    <select name='update_product_id' id='update_product_id'>
        <option value='' disabled selected>Select a Product</option>
        {{#each products}}
        <option value='{{this.productID}}'>
            {{this.productID}} - {{this.name}}
        </option>
        {{/each}}
    </select>

    <label for='update_product_set_id'>Set:</label>
    <select name='update_product_set_id' id='update_product_set_id'>
        <option value='' disabled selected>Select Set</option>
        {{#each sets}}
        <option value='{{this.setID}}'>{{this.setID}} - {{this.name}}</option>
        {{/each}}
    </select>

    <label for='update_product_price'>Price:</label>
    <input type='number' step='0.01' min='0' name='update_product_price' id='update_product_price' />

    <label for='update_product_quantity'>Quantity:</label>
    <input type='number' min='0' name='update_product_quantity' id='update_product_quantity' />

    <input type='submit' value='Submit (not wired yet)' />
</form>
